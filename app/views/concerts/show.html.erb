<h2> Artist or band name: <%= @concert.band_name.titleize %> </h2>
<h3> Date: <%= @concert.date.to_time.strftime('%B %e, %Y') %> </h3>
<% if false %>
<h3> Time: <%= @concert.concert_time.to_time.strftime('%l:%M %p') %> </h3>
<% end %>
<p> Added by: <%= @concert.user.name.capitalize %> </p>

<% if @concert.user == current_user %>
<%= link_to "Edit concert information", edit_user_concert_path(@user, @concert) %> |
<%= link_to "Delete concert information", user_concert_path(@user, @concert), method: :delete %>
<% end %>
| <%= link_to "All concerts", user_concerts_path %>
